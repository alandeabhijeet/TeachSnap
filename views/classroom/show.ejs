<% layout("/layouts/boilerplate.ejs") -%>

<div id="announce">
    <form id="attendance-form" action="<%=classroom._id%>/attendance" method="POST">
        <div id="tabdiv">
            <table>
                <thead>
                    <tr>
                        <th>Registration Number</th>
                        <th>Attendance</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (let stu of classroom.students) { %>
                        <tr>
                            <td><%= stu.registrationNumber %></td>
                            <td>
                                <!-- Adding a prefix to avoid numerical issues -->
                                <svg class="toggle-icon" width="18" height="18" viewBox="0 0 18 18" xmlns="http://www.w3.org/2000/svg"
                                    data-status="1" data-registration-number="reg-<%= stu.registrationNumber %>">
                                    <path class="icon-path" d="M6.116 14.884c.488.488 1.28.488 1.768 0l10-10c.488-.488.488-1.28 0-1.768s-1.28-.488-1.768 0l-9.08 9.15-4.152-4.15c-.488-.488-1.28-.488-1.768 0s-.488 1.28 0 1.768l5 5z" fill="limegreen" fill-rule="evenodd"/>
                                </svg>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
            <br>
            <div class="fbtn">
                <input type="date" class="dateinput" name="date"  required>
                <button type="submit">Submit</button>
            </div>
        </div>
    </form>
    
    <br>
    <div class="fbtn">
        <form action="/classroom/<%= classroom._id %>/record" method="get">
            <button type="submit">Record</button>
        </form>
        <form action="/classroom/<%= classroom._id %>/form" method="get">
            <button type="submit">Start Form</button>
       </form>
    </div>
    
    
    
</div>
