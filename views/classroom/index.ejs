<% layout("/layouts/boilerplate.ejs") -%>

<body class="out">
    <ul class="cards">
        <% for(let room of classrooms){%>
            <li>
                <a href="/classroom/<%=room._id%>" class="card">
                    <img src="/images/logo.png" class="card__image item" alt="" />
                    <div class="card__overlay">
                      <div class="card__header">
                        <svg class="card__arc" xmlns="http://www.w3.org/2000/svg"><path /></svg>                     
                        
                        <div class="card__header-text">
                          <h3 class="card__title"><%= room.className %></h3>            

                          </span>
                        </div>
                      </div>
                      <p class="card__description"><%= room.description %></p>
                      
                    </div>
                  </a>
                
            </li>
        <%}%>
    </ul>

    <br>

    <div class="btrow">
        <form action="/classroom/create">
          <button type="submit">Create Class</button>
        </form>
    </div>
</body>
